{
  "name": "uniswapex-contracts",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "buidler compile",
    "postbuild": "yarn gen:contract-typings && tsc -b",
    "test": "buidler clean && buidler test",
    "benchmark": "BENCHMARK=true yarn test",
    "lint": "yarn lint:ts && yarn lint:sol",
    "lint:fix": "yarn lint:ts:fix && yarn lint:sol:fix",
    "lint:sol": "solhint contracts/**/*.sol",
    "lint:ts": "tslint -c tslint.json -p .",
    "lint:ts:fix": "tslint -c tslint.json -p . --fix",
    "gen:contract-typings": "rm -f typings/contracts/* && typechain --target ethers --outDir typings/contracts './artifacts/*.json'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/UniswapEx/contracts-v2.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/UniswapEx/contracts-v2/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "pre-push": "yarn lint && yarn test"
    }
  },
  "homepage": "https://github.com/UniswapEx/contracts-v2#readme",
  "devDependencies": {
    "@nomiclabs/buidler": "^1.4.4",
    "@nomiclabs/buidler-truffle5": "^1.3.3",
    "@nomiclabs/buidler-web3": "^1.3.3",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "bn-chai": "^1.0.1",
    "ethereumjs-util": "^7.0.1",
    "husky": "^4.2.5",
    "solhint": "^3.0.0",
    "truffle-flattener": "^1.4.4",
    "ts-node": "^8.10.1",
    "tslint": "^6.1.2",
    "typechain": "^2.0.0",
    "typechain-target-ethers": "^1.0.4",
    "typescript": "^3.9.3",
    "web3": "^1.2.8"
  }
}
